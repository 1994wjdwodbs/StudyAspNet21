@model IEnumerable<TodoListWebApp.Models.Todo>

@{
    ViewData["Title"] = "할 일 리스트";
}

<h2>할 일 리스트</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">할 일 등록</a>
</p>
<table class="table table-bordered table-striped table-hover" style="text-align: center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                제목 @*Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                생성일 @*Html.DisplayNameFor(model => model.IsDone)*@
            </th>
            <th>
                완료 @*Html.DisplayNameFor(model => model.CreationDate)*@
            </th>
            <th>
                메뉴
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (item.IsDone)
                {
                    <s>@item.Title</s>
                }
                else
                {
                    <span>@item.Title</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
            <td align="center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">수정</a> |
                <a asp-action="Done" asp-route-id="@item.Id"  class="btn btn-danger">완료</a>
            </td>
        </tr>
}
    </tbody>
</table>
