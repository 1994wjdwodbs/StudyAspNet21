@model IEnumerable<MyPortpolio.Models.Board>

@{
    ViewData["Title"] = "Board";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center title" style="color: #574646;">Board&nbsp;&#128203;</h3>
                    <p>
                        <a asp-action="Create" class="btn btn-primary">글쓰기</a>
                    </p>
                    <table class="table" style="text-align: center;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subject)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Writer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReadCount)
                                </th>
                                <th>
                                    메뉴
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Subject)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Writer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReadCount)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                    <form class="contact-form">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

