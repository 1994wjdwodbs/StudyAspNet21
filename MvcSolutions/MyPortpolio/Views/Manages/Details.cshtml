@model MyPortpolio.Models.Manage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding : 40px 0;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="color : #574646; font-weight : bold; margin-top : 0px;">Manage&nbsp;&#128203;</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                            구분
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cate)
                        </dd>
                        <dt class="col-sm-2">
                            제목
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt class="col-sm-2">
                            내용
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                            등록일
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RegDate)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary">수정</a> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

